generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRESQL_URL")
  // url       = env("POSTGRES_PRISMA_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Employe {
  id                Int      @id @default(autoincrement())
  group_id            Int?  
  name              String
  join_date         DateTime? @db.Date @default(now())
  first_in          DateTime? @db.Time(6)
  last_out          DateTime? @db.Time(6)
  note              String @default("Empty")
  activities        Activitie[]
  employe_activitie Employe_Activitie[]
  employe_timeoff   Employe_TimeOff[]
  timeoff           TimeOff[]
  is_deleted        Boolean   @default(false)
  group             Group? @relation(fields: [group_id], references: [id])
}

model Group {
  id      Int      @id @default(autoincrement())
  name    String
  color   String @default("blue")
  is_deleted Boolean   @default(false) 
  employes Employe[] 
}

model Holiday {
  id         Int      @id @default(autoincrement())
  type_id Int?
  name       String
  start_date DateTime @db.Date
  end_date   DateTime? @db.Date
  is_deleted        Boolean   @default(false)
  type Type_Holiday? @relation(fields: [type_id], references: [id]) 
}

model Type_Holiday {
  id      Int      @id @default(autoincrement())
  name    String
  color   String?
  is_deleted Boolean   @default(false) 
  holidays Holiday[] 
}

model Schedule {
  id            Int             @id @default(autoincrement())
  name          String
  start_time    DateTime        @db.Time(6)
  end_time      DateTime        @db.Time(6)
  note          String
  is_deleted        Boolean   @default(false)
  work_schedule Work_Schedule[]
}

model Work {
  id            Int             @id @default(autoincrement())
  name          String
  is_deleted        Boolean   @default(false)
  work_schedule Work_Schedule[]
}

model Activitie {
  id                Int                 @id @default(autoincrement())
  employe_id        Int
  name              String
  description       String
  color             String
  employe           Employe             @relation(fields: [employe_id], references: [id])
  is_deleted        Boolean   @default(false)
  clock_in          Clock_In[]
  employe_activitie Employe_Activitie[]
  proyects          Proyect[]
}

model Proyect {
  id           Int        @id @default(autoincrement())
  activitie_id Int
  name         String
  code         String
  type         String
  is_deleted        Boolean   @default(false)
  clock_in     Clock_In[]
  activitie    Activitie  @relation(fields: [activitie_id], references: [id])
}

model TimeOff {
  id              Int               @id @default(autoincrement())
  employe_id      Int
  type_id Int
  start_date      DateTime          @db.Date
  end_date        DateTime?          @db.Date
  status          String
  note            String? @default("Empty")
  is_deleted        Boolean   @default(false)
  employe_timeoff Employe_TimeOff[]
  employe         Employe           @relation(fields: [employe_id], references: [id])
  type Type_TimeOff? @relation(fields: [type_id], references: [id]) 

}

model Type_TimeOff {
  id      Int      @id @default(autoincrement())
  name    String
  color   String?
  is_deleted Boolean   @default(false) 
  timeOff TimeOff[] 
}

model Employe_Activitie {
  id           Int       @id @default(autoincrement())
  employe_id   Int
  activitie_id Int
  activitie    Activitie @relation(fields: [activitie_id], references: [id])
  employe      Employe   @relation(fields: [employe_id], references: [id])
}

model Work_Schedule {
  id          Int      @id @default(autoincrement())
  schedule_id Int
  work_id     Int
  schedule    Schedule @relation(fields: [schedule_id], references: [id])
  work        Work     @relation(fields: [work_id], references: [id])
}

model Clock_In {
  id           Int       @id @default(autoincrement())
  activitie_id Int
  proyect_id   Int
  start_time   DateTime  @db.Time(6)
  date         DateTime  @db.Date
  note         String
  is_deleted        Boolean   @default(false)
  activitie    Activitie @relation(fields: [activitie_id], references: [id])
  proyect      Proyect   @relation(fields: [proyect_id], references: [id])
}

model Employe_TimeOff {
  id         Int     @id @default(autoincrement())
  employe_id Int
  timeoff_id Int
  employe    Employe @relation(fields: [employe_id], references: [id])
  timeoff    TimeOff @relation(fields: [timeoff_id], references: [id])
}
